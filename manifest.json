{
  "manifest_version": 2,
  "name": "PocketMonitor",
  "short_name" : "PM",
  "version": "1.1",
  "browser_action": {
  "default_icon": "mon.png"
  },
  "icons": { "16": "mon.png",
           "48": "mon.png",
          "128": "mon.png" },
  "content_scripts": [
    {
    "matches": ["https://www.youtube.com/*"],
    "js": ["scripts/jquery-3.1.1.min.js", "scripts/content.js"],
    "run_at": "document_end"
    }
  ],
  "background": {
  	"scripts": ["scripts/background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}


